            format="color|reference"/>
        <attr name="qv_quantityTextColor"
            format="color"/>
        <attr name="qv_quantityPadding"
            format="dimension"/>

        <attr name="qv_maxQuantity"
            format="integer"/>
        <attr name="qv_minQuantity"
            format="integer"/>
    </declare-styleable>

</resources>