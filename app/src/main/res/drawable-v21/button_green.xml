<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/green_bg">
    <item>
        <selector>
            <item android:state_enabled="false" android:drawable="@drawable/btn_green_unable"/>
            <item android:state_focused="false" android:state_pressed="false" android:drawable="@drawable/btn_green_normal" />
