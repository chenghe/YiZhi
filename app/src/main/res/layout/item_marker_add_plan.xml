<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_num"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/select_num_circle"
        android:gravity="center"
        android:visibility="gone"
        android:text=""
        android:textColor="@color/white"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/tv_abnormal_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_num"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="AFP偏高"
        android:textColor="@color/text_one"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:src="@drawable/delete"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_abnormal_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_delete"
        android:layout_marginRight="8dp"
        android:text=" U/L"
        android:textColor="@color/content_two"/>

    <EditText
        android:layout_centerVertical="true"
        android:id="@+id/et_abnormal_value"
        android:layout_toLeftOf="@+id/tv_abnormal_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:inputType="numberDecimal"
        android:maxEms="10"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:hint="    "
        android:textColor="@color/content_two"/>

</RelativeLayout>