<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <LinearLayout
        android:id="@+id/id_frag_interpretation_video_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="名师讲手术"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail6"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />


    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/custom_videoplayer_standard"
        android:layout_width="match_parent"
        android:layout_height="202dp"/>

        <TextView
            android:id="@+id/id_id_frag_interpretation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:textSize="15sp"
            android:textColor="@color/content_two"/>

        <com.zhongmeban.view.TextViewExpandableAnimation
            android:id="@+id/id_tv_doctor_expend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tvea_textContentSize="@dimen/text_content_size"
            app:tvea_expandLines="3"
            app:tvea_textExpand="@string/expand"
            app:tvea_textShrink="@string/shrink"
            android:textColor="@color/little_black"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            ></com.zhongmeban.view.TextViewExpandableAnimation>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    </LinearLayout>

    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="概述"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail4"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <com.zhongmeban.view.TextViewExpandableAnimation
        android:id="@+id/id_tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvea_textContentSize="@dimen/text_content_size"
        app:tvea_expandLines="5"
        app:tvea_textExpand="@string/expand"
        app:tvea_textShrink="@string/shrink"
        android:textColor="@color/little_black"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        ></com.zhongmeban.view.TextViewExpandableAnimation>




    <com.zhongmeban.view.ScrollLinearLayout
        android:id="@+id/id_list_therapeutic_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>



</LinearLayout>
