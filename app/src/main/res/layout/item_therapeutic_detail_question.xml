<?xml version="1.0" encoding="utf-8"?><!--癌症 分期解释-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/id_item_therapeutic_ll_question"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="23dp"
            android:src="@drawable/ic_arrow_right"
            android:id="@+id/id_item_therapeutic_iv_question"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_marginLeft="10dp"
            android:text="什麼是癌症？"
            android:textColor="@color/little_black"
            android:id="@+id/id_item_therapeutic_tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="40dp"
        android:padding="12dp"
        android:text="我是答案"
        android:textColor="@color/content_two"
        android:lineSpacingExtra="3dp"
        android:id="@+id/id_item_therapeutic_tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/divider_line" />

</LinearLayout>