<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0.0px" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="0.0px"
        >

        <LinearLayout
            android:id="@+id/left_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
<!--ImageButton  includeFontPadding  设置文本是否包含顶部和底部额外空白，默认为true-->
            <ImageView
                android:id="@+id/ivTitleBtnback"
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:scaleType="centerInside"
                android:src="@drawable/slid_back"
                android:includeFontPadding="false"
                android:visibility="gone" />


            <ImageButton
                android:id="@+id/slid_person_menu"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:includeFontPadding="false"
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ivTitleBtnRigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone" />

        <View
            android:id="@+id/title_line"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="#BDBDBD"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/change_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/slid_state"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/slid_state"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/slideTitleName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:paddingLeft="80.0dip"
            android:paddingRight="80.0dip"
            android:singleLine="true"
            android:text="项目列表"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/slid_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/slid_money_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/maintitle_set"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivTitleBtnIm"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/is_notice"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/slid_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/app_green"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/slid_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/slid_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="在执行"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/slid_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/top_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/middle_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/right_button"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_green"
            android:background="@android:color/transparent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/divider_line" />
</LinearLayout>