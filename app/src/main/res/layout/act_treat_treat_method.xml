<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar_view"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tbyt_treat_method"
        app:tabIndicatorColor="@color/app_green"
        app:tabSelectedTextColor="@color/app_green"
        android:background="@color/white"
        app:tabMode="fixed"
        app:tabTextColor="@color/top_text"
        android:layout_width="match_parent"
        android:layout_height="42dp"></android.support.design.widget.TabLayout>
        <include layout="@layout/layout_divider"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_treat_method"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>

</LinearLayout>