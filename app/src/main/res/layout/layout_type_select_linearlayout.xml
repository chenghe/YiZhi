<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_common"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_select_linearlayout_item"
        android:layout_marginLeft="@dimen/padding_content"
        android:layout_marginRight="@dimen/padding_content"
        android:layout_weight="1"
        android:background="@drawable/bg_box"
        android:gravity="center"
        android:text="我是第一个"
        android:textColor="@color/content_two"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_select_linearlayout_item"
        android:layout_marginLeft="@dimen/padding_content"
        android:layout_marginRight="@dimen/padding_content"
        android:layout_weight="1"
        android:background="@drawable/bg_box"
        android:gravity="center"
        android:text="我是第二个"
        android:textColor="@color/content_two"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_select_linearlayout_item"
        android:layout_marginLeft="@dimen/padding_content"
        android:layout_marginRight="@dimen/padding_content"
        android:layout_weight="1"
        android:background="@drawable/bg_box"
        android:gravity="center"
        android:text="我是第三个"
        android:textColor="@color/content_two"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_select_linearlayout_item"
        android:layout_marginLeft="@dimen/padding_content"
        android:layout_marginRight="@dimen/padding_content"
        android:layout_weight="1"
        android:background="@drawable/bg_box"
        android:gravity="center"
        android:text="我是第四个"
        android:textColor="@color/content_two"
        android:textSize="11sp" />
</LinearLayout>