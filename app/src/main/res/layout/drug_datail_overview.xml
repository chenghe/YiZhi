    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_0.5"
        android:layout_marginLeft="@dimen/px_40"
        android:background="@color/gray_c4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/px_80"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px_20"
        android:paddingBottom="@dimen/px_20"
        android:src="@drawable/rightarrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/ll_otherSameTypeDrug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_40"
        android:layout_marginRight="@dimen/px_40"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otherSameTypeDrug"
            android:textColor="@color/main_color"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_otherSameTypeDrug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/testCon1"
            android:singleLine="false"
            android:lineSpacingExtra="@dimen/px_5"/>
    </LinearLayout>

    </RelativeLayout>
</LinearLayout>

</ScrollView>
