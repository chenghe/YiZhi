<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_enter"
    android:layout_marginTop="10dp"
    >

    <include layout="@layout/layout_divider"/>
    <TextView
        android:padding="8dp"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/attention_time"
        android:text="2015年2月7日检查"
        android:textColor="@color/content_two"/>

    <include layout="@layout/layout_divider_padding"/>


    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_marker_hos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="16dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:text="CEACEA+AFPCEA+AFPCEA+AFPCEA+AFPCEA+AFPCEA+AFP+AFP"
            android:textColor="@color/text_one"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="红色为异常值"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_red"
            android:textSize="14sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/shape_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="名称"
            android:textColor="@color/content_two"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="正常值"
            android:layout_alignParentRight="true"
            android:textColor="@color/content_two"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="数值"
            android:textColor="@color/content_two"
            android:textSize="14sp"/>

    </RelativeLayout>
    <com.zhongmeban.view.MyListView
        android:id="@+id/lv_marker_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:divider="@null"
        android:descendantFocusability="blocksDescendants"></com.zhongmeban.view.MyListView>

</LinearLayout>