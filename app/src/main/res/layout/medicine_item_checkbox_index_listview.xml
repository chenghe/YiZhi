<?xml version="1.0" encoding="utf-8"?>
<!--药品索引，带checkbox-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/tv_letter"
        style="@style/LetterIndexTextViewStyle"
        android:textSize="12sp"
        android:background="@color/top_bg"
        android:clickable="false"/>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/selector_enter"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:textColor="@color/text_one"
            android:text="艾司唑仑片"
            />

        <TextView
            android:id="@+id/tv_medicalInsurance"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/tv_name"
            android:text="保"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="8dp"
            android:textSize="8sp"
            android:gravity="center"
            android:background="@drawable/medicine_index_circle"
            android:textColor="@color/app_green"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="10dp"
            android:textSize="13sp"
            android:text="舒乐安定片"
            android:textColor="@color/content_two"/>
        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="2800元"
            android:textColor="@color/num_color"
            android:visibility="gone"/>
        <com.zhongmeban.utils.SmoothCheckBox
            android:id="@+id/checkbox"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="40dp"
            app:color_checked="#58c4a5"
            android:layout_weight="1"
            android:clickable="false"
            app:can_click="false"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
</LinearLayout>