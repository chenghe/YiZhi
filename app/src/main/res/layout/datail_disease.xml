<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginBottom="@dimen/px_20">

            <TextView
                android:id="@+id/tv_disease_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_10"
                android:textSize="@dimen/px_30"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:text="" />

            <ImageView
                android:id="@+id/image_collect"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40"
                android:layout_marginRight="@dimen/px_20"
                android:scaleType="fitXY"
                android:src="@drawable/uncollect"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_0.5"
            android:background="@color/gray_c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diseasePosition"
                android:textColor="@color/main_color"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvDiseasePosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:text=""
                android:textColor="@color/little_black"
                android:singleLine="false"
                android:lineSpacingExtra="@dimen/px_5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_0.5"
            android:background="@color/gray_c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dominantCharacter"
                android:textColor="@color/main_color"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvDominantCharacter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:text=""
                android:textColor="@color/little_black"
                android:singleLine="false"
                android:lineSpacingExtra="@dimen/px_5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_0.5"
            android:background="@color/gray_c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diagnosisMethod"
                android:textColor="@color/main_color"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvDiagnosisMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:text=""
                android:textColor="@color/little_black"
                android:singleLine="false"
                android:lineSpacingExtra="@dimen/px_5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_0.5"
            android:background="@color/gray_c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/installmentExplain"
                android:textColor="@color/main_color"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvInstallmentExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:text=""
                android:textColor="@color/little_black"
                android:singleLine="false"
                android:lineSpacingExtra="@dimen/px_5" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
