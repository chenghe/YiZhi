<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/calendar_bg">

    <include
        layout="@layout/title_bar_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_c4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/image_mine"
            android:layout_marginLeft="@dimen/px_24"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="能一直冬眠多好"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:text="账号：11********1"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_c4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_c4"
        android:layout_marginTop="@dimen/px_10"/>

    <RelativeLayout
        android:id="@+id/rl_atten_doct"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_atten_doct"
            android:layout_width="@dimen/px_30"
            android:layout_height="@dimen/px_30"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_centerVertical="true"
            android:src="@drawable/atten_doct"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关注医生"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@id/image_atten_doct"
            android:textSize="@dimen/px_24"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_24"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_c4"/>

    <RelativeLayout
        android:id="@+id/rl_my_article"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_my_article"
            android:layout_width="@dimen/px_30"
            android:layout_height="@dimen/px_30"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_centerVertical="true"
            android:src="@drawable/myarticle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的文章"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@id/image_my_article"
            android:textSize="@dimen/px_24"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_24"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_c4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px_10"
        android:background="@color/gray_c4"/>

    <RelativeLayout
        android:id="@+id/rl_my_collected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_my_collected"
            android:layout_width="@dimen/px_30"
            android:layout_height="@dimen/px_30"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_centerVertical="true"
            android:src="@drawable/mycollected"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的收藏"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@id/image_my_collected"
            android:textSize="@dimen/px_24"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_24"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_c4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px_10"
        android:background="@color/gray_c4"/>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_setting"
            android:layout_width="@dimen/px_30"
            android:layout_height="@dimen/px_30"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_centerVertical="true"
            android:src="@drawable/setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="应用设置"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@id/image_setting"
            android:textSize="@dimen/px_24"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_24"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_c4"/>

</LinearLayout>
