<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_240"
            android:background="@drawable/hosp_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_72">

                <ImageButton
                    android:id="@+id/btn_left"
                    android:layout_width="@dimen/px_72"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:paddingRight="@dimen/px_24"
                    android:src="@drawable/back"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/btn_right"
                    android:layout_width="@dimen/px_67"
                    android:layout_height="@dimen/px_67"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/more1"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/llhuayan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="费用"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥ 200"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@id/llhuayan">

                    <TextView
                        android:id="@+id/tv_inspect_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="测测试测测试"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_24" />

                    <TextView
                        android:id="@+id/tv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_10"
                        android:text="测试"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_18" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_bg"
            android:drawableLeft="@drawable/nail2"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="项目简介"
            android:textColor="@color/content_two" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_c4" />

            <TextView
                android:id="@+id/tv_inspect_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
                android:singleLine="false"
                android:textColor="@color/content_two"
                android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_c4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_bg"
            android:drawableLeft="@drawable/nail2"
            android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="检查手段"
            android:textColor="@color/content_two" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_c4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_pain_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pain"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/tv_method_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="穿刺"
                    android:textColor="@color/content_two"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_pain_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="较高痛苦"
                    android:textColor="@color/content_two"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

        <com.hhl.library.FlowTagLayout
            android:id="@+id/flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_c4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/nail2"
                android:drawablePadding="10dp"
                android:text="参考指标"
                android:textColor="@color/content_two" />

            <TextView
                android:id="@+id/tv_cancer_releate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="癌症相关"
                android:textColor="@color/content_two"
                android:drawableRight="@drawable/littledown"
                android:drawablePadding="5dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_c4"/>

        <com.zhongmeban.view.MyListView
            android:id="@+id/indiactor_lists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:scrollbars="none" />
    </LinearLayout>
</ScrollView>