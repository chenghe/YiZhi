<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="概述"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail3"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <com.zhongmeban.view.TextViewExpandableAnimation
        android:id="@+id/id_tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvea_textContentSize="@dimen/text_content_size"
        app:tvea_expandLines="5"
        app:tvea_textExpand="@string/expand"
        app:tvea_textShrink="@string/shrink"
        android:textColor="@color/little_black"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        ></com.zhongmeban.view.TextViewExpandableAnimation>



    <com.zhongmeban.view.ScrollLinearLayout
        android:id="@+id/id_list_therapeutic_detail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


</LinearLayout>

