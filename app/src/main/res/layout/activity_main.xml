<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_vertify"
        android:layout_width="@dimen/px_150"
        android:layout_height="wrap_content"
        android:text="@string/sendVertifyCode"
        android:gravity="center"
        android:paddingTop="@dimen/px_5"
        android:paddingBottom="@dimen/px_5"/>

    <com.zhongmeban.editlibrary.GridPasswordView
        android:id="@+id/gpv_normal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:layout_marginBottom="@dimen/px_50" />

</RelativeLayout>
