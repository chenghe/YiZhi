<?xml version="1.0" encoding="utf-8"?>
<!--治疗详情 化疗的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="概述"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail6"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />


    <com.zhongmeban.view.TextViewExpandableAnimation
        android:id="@+id/id_frag_therapeutic_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tvea_textContentSize="@dimen/text_content_size"
        app:tvea_expandLines="5"
        app:tvea_textExpand="@string/expand"
        app:tvea_textShrink="@string/shrink"
        android:textColor="@color/little_black"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        ></com.zhongmeban.view.TextViewExpandableAnimation>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="治疗准备"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail4"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <com.zhongmeban.view.ScrollLinearLayout
        android:id="@+id/id_list_therapeutic_detail2_preper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="方案属于"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail3"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <TextView
        android:id="@+id/id_frag_therapeutic_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/little_black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="方案用药"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail2"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <me.next.tagview.TagCloudView
        android:id="@+id/id_frag_therapeutic_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        app:tcvItemBorderHorizontal="8dp"
        app:tcvItemBorderVertical="6dp"
        app:tcvBorder="8dp"
        app:tcvBackground="@drawable/background_tag_selector"
        app:tcvTextColor="#5c799c"
        app:tcvSingleLine="false"
        app:tcvCanTagClick="false"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="不良反应"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail1"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <com.zhongmeban.view.ScrollLinearLayout
        android:id="@+id/id_list_therapeutic_detail2_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    <TextView
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="治疗注意"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/nail2"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:textColor="@color/content_two"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <com.zhongmeban.view.ScrollLinearLayout
        android:id="@+id/id_list_therapeutic_detail2_attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>
